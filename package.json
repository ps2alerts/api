{
  "name": "ps2alerts-api",
  "version": "4.2.0",
  "description": "The API that powers PS2Alerts.com",
  "author": "",
  "private": true,
  "license": "GNU",
  "engines": {
    "node": ">=16.0.0"
  },
  "bugs": {
    "url": "https://github.com/ps2alerts/api/issues"
  },
  "homepage": "https://github.com/ps2alerts/api#readme",
  "engineStrict": true,
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint ./src --ext .ts",
    "lint-fix": "eslint ./src --ext .ts --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "prepare": "husky install"
  },
  "dependencies": {
    "@nestjs/common": "^7.6.13",
    "@nestjs/config": "^0.6.3",
    "@nestjs/core": "^7.6.13",
    "@nestjs/microservices": "^7.6.12",
    "@nestjs/passport": "^8.2.2",
    "@nestjs/platform-fastify": "^7.6.13",
    "@nestjs/platform-ws": "^7.4.2",
    "@nestjs/schedule": "^0.4.2",
    "@nestjs/swagger": "^4.7.15",
    "@nestjs/terminus": "^8.1.1",
    "@nestjs/typeorm": "^7.1.5",
    "@nestjs/websockets": "^7.6.7",
    "@types/cache-manager-ioredis": "^2.0.3",
    "@types/cron": "^1.7.2",
    "amqp-connection-manager": "^3.2.2",
    "amqplib": "^0.6.0",
    "cache-manager": "^3.6.3",
    "cache-manager-ioredis": "^2.1.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "fastify-compress": "^3.4.1",
    "fastify-helmet": "^5.0.3",
    "fastify-rate-limit": "^5.9.0",
    "fastify-swagger": "^4.17.1",
    "mongodb": "^3.6.3",
    "nestjs-swagger-api-implicit-queries-decorator": "^1.0.0",
    "passport": "^0.6.0",
    "passport-http": "^0.3.0",
    "rimraf": "^3.0.2",
    "rxjs": "^6.6.3",
    "typeorm": "^0.2.45"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.5.6",
    "@nestjs/schematics": "^7.2.7",
    "@nestjs/testing": "^7.6.13",
    "@types/jest": "29.5.0",
    "@types/node": "^14.18.41",
    "@types/passport-http": "^0.3.9",
    "@types/password": "^0.1.0",
    "@types/supertest": "^2.0.12",
    "@types/validator": "^13.7.13",
    "@types/ws": "^7.2.6",
    "@typescript-eslint/eslint-plugin": "^3.6.0",
    "@typescript-eslint/parser": "^3.6.0",
    "eslint": "7.4.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-import": "^2.27.5",
    "husky": "^8.0.3",
    "jest": "26.6.3",
    "lint-staged": "^13.2.0",
    "prettier": "^1.19.1",
    "supertest": "^6.3.3",
    "ts-jest": "26.5.2",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.10.2",
    "tsconfig-paths": "^3.14.2",
    "typescript": "^3.9.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix"
    ]
  }
}
