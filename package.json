{
  "name": "ps2alerts-api",
  "version": "4.5.0",
  "description": "The API that powers PS2Alerts.com",
  "author": "",
  "private": true,
  "license": "GNU",
  "engines": {
    "node": ">=16.0.0"
  },
  "bugs": {
    "url": "https://github.com/ps2alerts/api/issues"
  },
  "homepage": "https://github.com/ps2alerts/api#readme",
  "engineStrict": true,
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint ./src --ext .ts",
    "lint-fix": "eslint ./src --ext .ts --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "prepare": "husky install"
  },
  "resolutions": {
    "schema-utils": "^4.0.0"
  },
  "dependencies": {
    "@fastify/compress": "^6.2.1",
    "@fastify/helmet": "^10.1.0",
    "@fastify/static": "^6.9.0",
    "@nestjs/axios": "^2.0.0",
    "@nestjs/common": "^9.3.12",
    "@nestjs/config": "^2.3.1",
    "@nestjs/core": "^9.3.12",
    "@nestjs/microservices": "^9.3.12",
    "@nestjs/passport": "^10.0.1",
    "@nestjs/platform-fastify": "^9.3.12",
    "@nestjs/schedule": "^2.2.0",
    "@nestjs/swagger": "^6.2.1",
    "@nestjs/terminus": "^9.2.1",
    "@nestjs/typeorm": "^9.0.1",
    "@nestjs/websockets": "^9.3.12",
    "@types/cache-manager-ioredis": "^2.0.3",
    "@types/cron": "^2.0.1",
    "amqp-connection-manager": "^4.1.11",
    "amqplib": "^0.10.3",
    "axios": "^1.3.4",
    "cache-manager": "^4.1.0",
    "cache-manager-ioredis": "^2.1.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "mongodb": "^4.14.0",
    "nestjs-swagger-api-implicit-queries-decorator": "^1.0.0",
    "passport": "^0.6.0",
    "passport-http": "^0.3.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.0",
    "typeorm": "^0.3.12"
  },
  "devDependencies": {
    "@nestjs/cli": "9.4.2",
    "@types/node": "^18.15.11",
    "@types/passport-http": "^0.3.9",
    "@types/password": "^0.1.0",
    "@types/supertest": "^2.0.12",
    "@types/validator": "^13.7.13",
    "@types/ws": "^8.5.4",
    "@typescript-eslint/eslint-plugin": "^5.57.0",
    "@typescript-eslint/parser": "^5.57.0",
    "eslint": "^8.36.0",
    "eslint-plugin-import": "^2.27.5",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix"
    ]
  }
}
