{
  "name": "ps2alerts-api",
  "version": "0.1.2",
  "description": "The API that powers PS2Alerts.com",
  "author": "",
  "private": true,
  "license": "GNU",
  "engines": {
    "node": ">=12.0.0"
  },
  "bugs": {
    "url": "https://github.com/ps2alerts/api/issues"
  },
  "homepage": "https://github.com/ps2alerts/api#readme",
  "engineStrict": true,
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint ./src --ext .ts",
    "lint-fix": "eslint ./src --ext .ts --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^7.4.2",
    "@nestjs/config": "^0.6.1",
    "@nestjs/core": "^7.4.2",
    "@nestjs/microservices": "^7.4.2",
    "@nestjs/platform-fastify": "^7.4.2",
    "@nestjs/platform-ws": "^7.4.2",
    "@nestjs/schedule": "^0.4.1",
    "@nestjs/swagger": "^4.7.5",
    "@nestjs/typeorm": "^7.1.5",
    "@nestjs/websockets": "^7.6.1",
    "@types/cron": "^1.7.2",
    "amqp-connection-manager": "^3.2.0",
    "amqplib": "^0.6.0",
    "class-transformer": "^0.3.1",
    "fastify-helmet": "^5.0.3",
    "fastify-rate-limit": "^4.0.2",
    "fastify-swagger": "^3.3.0",
    "mongodb": "^3.6.3",
    "nestjs-swagger-api-implicit-queries-decorator": "^1.0.0",
    "rimraf": "^3.0.2",
    "rxjs": "^6.6.2",
    "typeorm": "^0.2.29"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.0.0",
    "@nestjs/schematics": "^7.0.0",
    "@nestjs/testing": "^7.0.0",
    "@types/jest": "25.2.3",
    "@types/node": "^14.0.13",
    "@types/supertest": "^2.0.8",
    "@types/ws": "^7.2.6",
    "@typescript-eslint/eslint-plugin": "^3.6.0",
    "@typescript-eslint/parser": "^3.6.0",
    "eslint": "7.4.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.1",
    "jest": "26.0.1",
    "prettier": "^1.19.1",
    "supertest": "^6.1.3",
    "ts-jest": "26.1.0",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.10.2",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.9.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
